<Page x:Class="GymBro.App.Pages.ProgramsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GymBro.App.ViewModels"
      Title="Программы">
    <Page.DataContext>
        <vm:ProgramsPageViewModel />
    </Page.DataContext>

    <Grid Background="#F5F7FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Программы тренировок" Style="{StaticResource Heading1Style}"/>

                <!-- Master-Slave в одном Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Левая колонка (Master) -->
                    <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="👥 Пользователи" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,15"/>
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Users}" 
                                     SelectedItem="{Binding SelectedUser}"
                                     Style="{StaticResource CardListBoxStyle}"
                                     ItemContainerStyle="{StaticResource CardListItemStyle}"
                                     Height="250"/>
                            <StackPanel Grid.Row="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        Margin="0,15,0,0">
                                <Button Content="➕ Добавить" 
                                        Command="{Binding AddUserCommand}" 
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="15,8"/>
                                <Button Content="➖ Удалить" 
                                        Command="{Binding DeleteUserCommand}" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="15,8"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Разделитель (можно оставить пустым) -->
                    <Grid Grid.Column="1"/>

                    <!-- Правая колонка (Slave) -->
                    <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="📋 Программы" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,15">
                                <Run Text="{Binding SelectedUser, FallbackValue=''}" 
                                     Foreground="#3498DB"/>
                            </TextBlock>
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Programs}" 
                                     Style="{StaticResource CardListBoxStyle}"
                                     ItemContainerStyle="{StaticResource CardListItemStyle}"
                                     Height="250"/>
                            <StackPanel Grid.Row="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right" 
                                        Margin="0,15,0,0">
                                <Button Content="➕ Добавить программу" 
                                        Command="{Binding AddProgramCommand}" 
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Padding="15,8"/>
                                <Button Content="➖ Удалить" 
                                        Command="{Binding DeleteProgramCommand}" 
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Padding="15,8"
                                        Margin="10,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>