<Page x:Class="GymBro.App.Pages.ExercisesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GymBro.App.ViewModels"
      Title="Упражнения">
    <Page.DataContext>
        <vm:ExercisesPageViewModel />
    </Page.DataContext>

    <Grid Background="#F5F7FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Библиотека упражнений" Style="{StaticResource Heading1Style}"/>

                <!-- Индикатор загрузки -->
                <Border Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Загрузка..." HorizontalAlignment="Center" FontSize="16"/>
                </Border>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Список упражнений -->
                    <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="📋 Список упражнений" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,15"/>
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Exercises}" 
                                     SelectedItem="{Binding SelectedExercise}"
                                     Style="{StaticResource CardListBoxStyle}"
                                     ItemContainerStyle="{StaticResource CardListItemStyle}"
                                     Height="300">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" FontSize="16"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Border>

                    <!-- Разделитель -->
                    <Grid Grid.Column="1"/>

                    <!-- Детали упражнения -->
                    <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="🔍 Детали упражнения" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,15"/>
                            <Border Grid.Row="1" 
                                    Background="#F8F9FA" 
                                    CornerRadius="10" 
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedExercise.Name, FallbackValue='Выберите упражнение'}" 
                                               FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding SelectedExercise.Description}" 
                                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                                    <TextBlock>
                                        <Run Text="Подходы:" FontWeight="SemiBold"/>
                                        <Run Text="{Binding SelectedExercise.DefaultSets, StringFormat=' {0}'}"/>
                                        <Run Text="x"/>
                                        <Run Text="{Binding SelectedExercise.DefaultRepsMin}"/>
                                        <Run Text="-"/>
                                        <Run Text="{Binding SelectedExercise.DefaultRepsMax}"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="Оборудование:" FontWeight="SemiBold"/>
                                        <Run>
                                            <Run.Text>
                                                <MultiBinding StringFormat=" {0}">
                                                    <Binding Path="SelectedExercise.Equipment" Converter="{StaticResource EquipmentToStringConverter}"/>
                                                </MultiBinding>
                                            </Run.Text>
                                        </Run>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                            <Button Grid.Row="2" 
                                    Content="Просмотреть полное описание" 
                                    Command="{Binding ViewExerciseCommand}" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>