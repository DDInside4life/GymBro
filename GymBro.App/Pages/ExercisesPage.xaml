<Page x:Class="GymBro.App.Pages.ExercisesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GymBro.App.ViewModels"
      Title="Упражнения">
    <Page.DataContext>
        <vm:ExercisesPageViewModel />
    </Page.DataContext>

    <Grid Background="#F5F7FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Библиотека упражнений" Style="{StaticResource Heading1Style}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Список упражнений -->
                    <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="📋 Список упражнений" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,15"/>
                            <ListBox Grid.Row="1" 
                                     ItemsSource="{Binding Exercises}" 
                                     SelectedItem="{Binding SelectedExercise}"
                                     Style="{StaticResource CardListBoxStyle}"
                                     ItemContainerStyle="{StaticResource CardListItemStyle}"
                                     Height="300"/>
                        </Grid>
                    </Border>

                    <!-- Разделитель -->
                    <Grid Grid.Column="1"/>

                    <!-- Детали упражнения -->
                    <Border Grid.Column="2" Background="White" CornerRadius="15" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="🔍 Детали упражнения" 
                                       FontSize="18" 
                                       FontWeight="SemiBold" 
                                       Foreground="#2C3E50" 
                                       Margin="0,0,0,15"/>
                            <Border Grid.Row="1" 
                                    Background="#F8F9FA" 
                                    CornerRadius="10" 
                                    Padding="20">
                                <TextBlock Text="{Binding SelectedExercise, FallbackValue='Выберите упражнение из списка'}" 
                                           FontSize="16" 
                                           Foreground="#2C3E50" 
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                            <Button Grid.Row="2" 
                                    Content="Просмотреть полное описание" 
                                    Command="{Binding ViewExerciseCommand}" 
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>