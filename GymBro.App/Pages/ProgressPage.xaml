<Page x:Class="GymBro.App.Pages.ProgressPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:GymBro.App.ViewModels"
      Title="Прогресс">
    <Page.DataContext>
        <vm:ProgressPageViewModel />
    </Page.DataContext>

    <Grid Background="#F5F7FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <TextBlock Text="Мой прогресс" Style="{StaticResource Heading1Style}"/>

                <Border Background="White" CornerRadius="15" Padding="30">
                    <StackPanel>
                        <TextBlock Text="📊 Графики прогресса (в разработке)" 
                                   FontSize="18" 
                                   Foreground="#7F8C8D" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Скоро здесь появится статистика ваших тренировок, графики изменения веса и достижения целей." 
                                   FontSize="14" 
                                   Foreground="#95A5A6" 
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>