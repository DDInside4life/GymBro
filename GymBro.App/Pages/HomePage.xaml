<Page x:Class="GymBro.App.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Домашняя страница">

    <Grid Background="#F5F7FA">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <!-- Приветствие и дата -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="Добро пожаловать, Роман!"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"/>
                    <TextBlock Text="{Binding CurrentDate}"
                               FontSize="16"
                               Foreground="#7F8C8D"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Быстрые действия - две карточки -->
                <Grid Margin="0,0,0,40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Карточка 1: Начать тренировку -->
                    <Border Grid.Column="0" 
                            Background="White"
                            CornerRadius="15"
                            Padding="25">
                        <StackPanel>
                            <TextBlock Text="Начать тренировку"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"
                                       Margin="0,15,0,10"/>
                            <TextBlock Text="Тренировка сегодня: Грудь и трицепс"
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"/>
                            <Button Content="Начать"
                                    Background="#3498DB"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Padding="20,10"
                                    Margin="0,20,0,0"
                                    BorderThickness="0"
                                    Click="StartWorkoutButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Карточка 2: Программы тренировок -->
                    <Border Grid.Column="2" 
                            Background="White"
                            CornerRadius="15"
                            Padding="25">
                        <StackPanel>
                            <TextBlock Text="Каталог программ"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"
                                       Margin="0,15,0,10"/>
                            <TextBlock Text="Силовая программа (неделя 4 из 12)"
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"/>
                            <Button Content="Просмотреть"
                                    Background="#2ECC71"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Padding="20,10"
                                    Margin="0,20,0,0"
                                    BorderThickness="0"
                                    Click="ViewProgramButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Остальное содержимое (предстоящие тренировки, советы) оставляем как есть -->
                <!-- Предстоящие тренировки -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,0,0,30">
                    <StackPanel>
                        <TextBlock Text="📅 Предстоящая тренировка"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <ListView ItemsSource="{Binding UpcomingWorkouts}"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15" 
                                            BorderBrush="#ECF0F1" 
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" 
                                                        Margin="0,0,15,0">
                                                <TextBlock Text="{Binding Day}"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="#3498DB"/>
                                                <TextBlock Text="{Binding Date}"
                                                           FontSize="12"
                                                           Foreground="#7F8C8D"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding WorkoutName}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"/>
                                                <TextBlock Text="{Binding Exercises}"
                                                           FontSize="14"
                                                           Foreground="#7F8C8D"/>
                                            </StackPanel>

                                            <Button Grid.Column="2"
                                                    Content="Начать"
                                                    Background="#3498DB"
                                                    Foreground="White"
                                                    Padding="15,8"
                                                    BorderThickness="0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Border>

                <!-- Советы и рекомендации -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="25">
                    <StackPanel>
                        <TextBlock Text="💡 Советы от GymBro"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <StackPanel>
                            <Border Padding="15" 
                                    Background="#F8F9FA"
                                    CornerRadius="10"
                                    Margin="0,0,0,10">
                                <TextBlock Text="• Увеличьте потребление воды до 3 литров в день для улучшения восстановления"
                                           FontSize="14"
                                           Foreground="#2C3E50"/>
                            </Border>

                            <Border Padding="15" 
                                    Background="#F8F9FA"
                                    CornerRadius="10"
                                    Margin="0,0,0,10">
                                <TextBlock Text="• Не забывайте о разминке перед тренировкой для предотвращения травм"
                                           FontSize="14"
                                           Foreground="#2C3E50"/>
                            </Border>

                            <Border Padding="15" 
                                    Background="#F8F9FA"
                                    CornerRadius="10">
                                <TextBlock Text="• Записывайте свои рабочие веса для отслеживания прогресса"
                                           FontSize="14"
                                           Foreground="#2C3E50"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>