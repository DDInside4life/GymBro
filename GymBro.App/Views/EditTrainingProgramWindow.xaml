<Window x:Class="GymBro.App.Views.EditTrainingProgramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование программы" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Название*"/>
        <TextBox Grid.Row="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Text="Описание"/>
        <TextBox Grid.Row="3" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                 AcceptsReturn="True" Height="60"/>

        <TextBlock Grid.Row="4" Text="Тип программы*"/>
        <ComboBox Grid.Row="5" SelectedItem="{Binding ProgramType}"/>

        <TextBlock Grid.Row="6" Text="Длительность (недель)*"/>
        <TextBox Grid.Row="7" Text="{Binding DurationWeeks, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="8" Text="Сложность (1-5)*"/>
        <TextBox Grid.Row="9" Text="{Binding Difficulty, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="10" Text="Тренировок в неделю*"/>
        <TextBox Grid.Row="11" Text="{Binding WorkoutsPerWeek, UpdateSourceTrigger=PropertyChanged}"/>

        <GroupBox Grid.Row="12" Header="Упражнения программы" Margin="0,20,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="➕ Добавить" Command="{Binding AddExerciseCommand}" Padding="10,5" Margin="5"/>
                    <Button Content="➖ Удалить" Command="{Binding RemoveExerciseCommand}" 
                            CommandParameter="{Binding SelectedItem, ElementName=ExercisesList}" Padding="10,5" Margin="5"/>
                </StackPanel>
                <ListBox Grid.Row="1" x:Name="ExercisesList" 
                         ItemsSource="{Binding Exercises}" 
                         DisplayMemberPath="Name" 
                         Height="150" Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="13" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Command="{Binding OkCommand}" 
                    Background="#3498DB" Foreground="White" Padding="20,10" Margin="5" Width="100"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" 
                    Background="#95A5A6" Foreground="White" Padding="20,10" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>