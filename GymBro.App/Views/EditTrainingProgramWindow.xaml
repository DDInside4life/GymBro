<Window x:Class="GymBro.App.Views.EditTrainingProgramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:GymBro.App.ViewModels"
        Title="Редактирование программы" 
        Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F7FA">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource TextBoxStyle}">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="CardListBoxStyle" TargetType="ListBox" BasedOn="{StaticResource CardListBoxStyle}">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="150"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Редактирование программы" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,30"/>

            <!-- Основные поля -->
            <TextBlock Text="Название*"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Описание"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                     AcceptsReturn="True" Height="80"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Тип программы*"/>
                    <ComboBox ItemsSource="{Binding ProgramTypes}" SelectedItem="{Binding ProgramType}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Сложность (1-5)*"/>
                    <TextBox Text="{Binding Difficulty, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Длительность (недель)*"/>
                    <TextBox Text="{Binding DurationWeeks, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Тренировок в неделю*"/>
                    <TextBox Text="{Binding WorkoutsPerWeek, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>

            <!-- Упражнения программы -->
            <GroupBox Header="Упражнения программы" Margin="0,20,0,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="➕ Добавить упражнение" Command="{Binding AddExerciseCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}" Padding="10,5" Margin="5"/>
                        <Button Content="➖ Удалить" Command="{Binding RemoveExerciseCommand}" 
                                CommandParameter="{Binding SelectedItem, ElementName=ExercisesList}"
                                Style="{StaticResource SecondaryButtonStyle}" Padding="10,5" Margin="5"/>
                    </StackPanel>
                    <ListBox Grid.Row="1" x:Name="ExercisesList" 
                             ItemsSource="{Binding Exercises}" 
                             Style="{StaticResource CardListBoxStyle}"
                             ItemContainerStyle="{StaticResource CardListItemStyle}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="{Binding Name}" FontSize="14"/>
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding DefaultSets, StringFormat='{}{0} x {1}-{2}'}" 
                                               FontSize="12" Foreground="#7F8C8D" Margin="5,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </GroupBox>

            <!-- Кнопки OK/Отмена -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                <Button Content="OK" Command="{Binding OkCommand}" 
                        Style="{StaticResource PrimaryButtonStyle}" Width="100" Margin="5"/>
                <Button Content="Отмена" Command="{Binding CancelCommand}" 
                        Style="{StaticResource SecondaryButtonStyle}" Width="100" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>