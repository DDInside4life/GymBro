<Window x:Class="GymBro.App.Views.EditUserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактирование профиля" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Имя*"/>
        <TextBox Grid.Row="1" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="2" Text="Возраст*"/>
        <TextBox Grid.Row="3" Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="4" Text="Вес (кг)*"/>
        <TextBox Grid.Row="5" Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="6" Text="Рост (см)*"/>
        <TextBox Grid.Row="7" Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Grid.Row="8" Text="Дата рождения"/>
        <DatePicker Grid.Row="9" SelectedDate="{Binding BirthDate}"/>

        <TextBlock Grid.Row="10" Text="Уровень подготовки*"/>
        <ComboBox Grid.Row="11" SelectedItem="{Binding FitnessLevel}"/>

        <TextBlock Grid.Row="12" Text="Цель тренировок*"/>
        <ComboBox Grid.Row="13" SelectedItem="{Binding TrainingGoal}"/>

        <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Command="{Binding OkCommand}" 
                    Background="#3498DB" Foreground="White" Padding="20,10" Margin="5" Width="100"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" 
                    Background="#95A5A6" Foreground="White" Padding="20,10" Margin="5" Width="100"/>
        </StackPanel>
    </Grid>
</Window>