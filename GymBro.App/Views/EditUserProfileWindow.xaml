<Window x:Class="GymBro.App.Views.EditUserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymBro.App.Views"
        mc:Ignorable="d"
        Title="Редактирование профиля" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Имя" Margin="0,5,0,2"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

        <TextBlock Grid.Row="2" Text="Возраст" Margin="0,10,0,2"/>
        <TextBox Grid.Row="3" x:Name="AgeTextBox" Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

        <TextBlock Grid.Row="4" Text="Вес (кг)" Margin="0,10,0,2"/>
        <TextBox Grid.Row="5" x:Name="WeightTextBox" Text="{Binding Weight, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

        <TextBlock Grid.Row="6" Text="Рост (см)" Margin="0,10,0,2"/>
        <TextBox Grid.Row="7" x:Name="HeightTextBox" Text="{Binding Height, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>

        <TextBlock Grid.Row="8" Text="Дата рождения" Margin="0,10,0,2"/>
        <DatePicker Grid.Row="9" x:Name="BirthDatePicker" SelectedDate="{Binding BirthDate}" Padding="5" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" x:Name="OkButton" Click="OkButton_Click" Width="80" Margin="5" IsDefault="True"/>
            <Button Content="Отмена" x:Name="CancelButton" Click="CancelButton_Click" Width="80" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>