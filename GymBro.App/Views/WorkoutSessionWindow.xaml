<Window x:Class="GymBro.App.WorkoutSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Тренировка" 
        Height="958" 
        Width="1708"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с информацией о тренировке -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Информация о тренировке -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="💪 Тренировка: День 1"
                               Foreground="White"
                               FontSize="24"
                               FontWeight="Bold"/>
                    <TextBlock Text="Грудь и трицепс • Силовая программа"
                               Foreground="#BDC3C7"
                               FontSize="16"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Таймер и статистика -->
                <StackPanel Grid.Column="1" 
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                    <Border Background="#34495E"
                            CornerRadius="10"
                            Padding="15,10"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏱"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="45:22"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="Bold"/>
                            <TextBlock Text="/ 60:00"
                                       Foreground="#BDC3C7"
                                       FontSize="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#34495E"
                            CornerRadius="10"
                            Padding="15,10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✅"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="3/8"
                                       Foreground="White"
                                       FontSize="24"
                                       FontWeight="Bold"/>
                            <TextBlock Text="упражнений"
                                       Foreground="#BDC3C7"
                                       FontSize="16"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Bottom"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Управление тренировкой -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Пауза"
                            Background="#E74C3C"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            BorderThickness="0"
                            Margin="0,0,10,0"/>

                    <Button Content="Завершить"
                            Background="#2ECC71"
                            Foreground="White"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть: текущее упражнение -->
            <Border Grid.Column="0" 
                    Background="White"
                    Margin="20"
                    CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок упражнения -->
                    <Border Grid.Row="0" 
                            Background="#3498DB"
                            CornerRadius="15,15,0,0"
                            Padding="30">
                        <StackPanel>
                            <TextBlock Text="Упражнение 4 из 8"
                                       Foreground="White"
                                       FontSize="16"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Жим штанги лежа"
                                       Foreground="White"
                                       FontSize="32"
                                       FontWeight="Bold"/>
                            <TextBlock Text="Основное упражнение для развития грудных мышц"
                                       Foreground="#BDC3C7"
                                       FontSize="16"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Подходы и повторения -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="30">
                            <!-- Подход 1 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="10"
                                    Padding="20"
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Подход 1"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               VerticalAlignment="Center"
                                               Margin="0,0,20,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Планируемые повторения: 10"
                                                   FontSize="16"
                                                   Foreground="#7F8C8D"/>
                                        <TextBlock Text="Планируемый вес: 60 кг"
                                                   FontSize="16"
                                                   Foreground="#7F8C8D"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal">
                                        <TextBox Text="10"
                                                 Width="60"
                                                 FontSize="16"
                                                 Padding="10"
                                                 TextAlignment="Center"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1"
                                                 Margin="0,0,10,0"/>
                                        <TextBlock Text="повторений"
                                                   FontSize="14"
                                                   Foreground="#7F8C8D"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,20,0"/>

                                        <TextBox Text="60"
                                                 Width="60"
                                                 FontSize="16"
                                                 Padding="10"
                                                 TextAlignment="Center"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1"/>
                                        <TextBlock Text="кг"
                                                   FontSize="14"
                                                   Foreground="#7F8C8D"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Подход 2 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="10"
                                    Padding="20"
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="Подход 2"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               VerticalAlignment="Center"
                                               Margin="0,0,20,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Планируемые повторения: 8"
                                                   FontSize="16"
                                                   Foreground="#7F8C8D"/>
                                        <TextBlock Text="Планируемый вес: 65 кг"
                                                   FontSize="16"
                                                   Foreground="#7F8C8D"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2"
                                                Orientation="Horizontal">
                                        <TextBox Text=""
                                                 Width="60"
                                                 FontSize="16"
                                                 Padding="10"
                                                 TextAlignment="Center"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1"
                                                 Margin="0,0,10,0"/>
                                        <TextBlock Text="повторений"
                                                   FontSize="14"
                                                   Foreground="#7F8C8D"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,20,0"/>

                                        <TextBox Text=""
                                                 Width="60"
                                                 FontSize="16"
                                                 Padding="10"
                                                 TextAlignment="Center"
                                                 BorderBrush="#BDC3C7"
                                                 BorderThickness="1" />
                                        <TextBlock Text="кг"
                                                   FontSize="14"
                                                   Foreground="#7F8C8D"
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Подход 3 и 4 -->
                            <Border Background="#F8F9FA"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Оставшиеся подходы"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#2C3E50"
                                               Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    Margin="0,0,10,0">
                                            <TextBlock Text="Подход 3"
                                                       FontSize="14"
                                                       Foreground="#7F8C8D"/>
                                            <TextBlock Text="8 повторений • 70 кг"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1"
                                                    Margin="10,0,0,0">
                                            <TextBlock Text="Подход 4"
                                                       FontSize="14"
                                                       Foreground="#7F8C8D"/>
                                            <TextBlock Text="6 повторений • 75 кг"
                                                       FontSize="16"
                                                       FontWeight="SemiBold"
                                                       Foreground="#2C3E50"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <!-- Кнопки управления подходом -->
                            <WrapPanel Margin="0,30,0,0"
                                        HorizontalAlignment="Center">
                                <Button Content="Пропустить подход"
                                        Background="Transparent"
                                        Foreground="#E74C3C"
                                        BorderThickness="1"
                                        BorderBrush="#E74C3C"
                                        Padding="20,10"
                                        Margin="0,0,15,0"/>

                                <Button Content="Завершить подход"
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        Padding="30,10"/>
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Таймер отдыха -->
                    <Border Grid.Row="2" 
                            Background="#FFF4E6"
                            CornerRadius="0,0,15,15"
                            Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Text="⏱"
                                           FontSize="24"
                                           Margin="0,0,10,0"/>
                                <TextBlock Text="Отдых:"
                                           FontSize="16"
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        HorizontalAlignment="Center">
                                <TextBlock Text="01:45"
                                           FontSize="32"
                                           FontWeight="Bold"
                                           Foreground="#E67E22"/>
                                <TextBlock Text="осталось из 02:00"
                                           FontSize="14"
                                           Foreground="#7F8C8D"/>
                            </StackPanel>

                            <Button Grid.Column="2"
                                    Content="Пропустить отдых"
                                    Background="#E67E22"
                                    Foreground="White"
                                    FontWeight="SemiBold"
                                    Padding="20,10"
                                    BorderThickness="0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Правая часть: информация и навигация -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Следующее упражнение -->
                <Border Grid.Row="0" 
                        Background="White"
                        Margin="0,20,20,10"
                        CornerRadius="15">
                    <StackPanel Margin="20">
                        <TextBlock Text="Далее:"
                                   FontSize="16"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,10"/>

                        <Border Background="#F8F9FA"
                                CornerRadius="10"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="Разводка гантелей лежа"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"/>
                                <TextBlock Text="3 подхода по 12 повторений"
                                           FontSize="16"
                                           Foreground="#7F8C8D"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Список упражнений в тренировке -->
                <Border Grid.Row="1" 
                        Background="White"
                        Margin="0,0,20,20"
                        CornerRadius="15">
                    <StackPanel>
                        <TextBlock Text="📋 Упражнения в тренировке"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="20,20,20,15"/>

                        <ListView ItemsSource="{Binding Exercises}"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="15" 
                                            BorderBrush="#ECF0F1" 
                                            BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Статус -->
                                            <Border Grid.Column="0"
                                                    Width="30" 
                                                    Height="30"
                                                    Background="{Binding StatusColor}"
                                                    CornerRadius="15"
                                                    Margin="0,0,15,0">
                                                <TextBlock Text="{Binding StatusIcon}"
                                                           FontSize="14"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Название -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2C3E50"/>
                                                <TextBlock Text="{Binding Sets}"
                                                           FontSize="14"
                                                           Foreground="#7F8C8D"/>
                                            </StackPanel>

                                            <!-- Действие -->
                                            <Button Grid.Column="2"
                                                    Content="Перейти"
                                                    Background="Transparent"
                                                    Foreground="#3498DB"
                                                    BorderThickness="1"
                                                    BorderBrush="#3498DB"
                                                    Padding="10,5"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Заметки -->
                        <Border Margin="20,20,20,0"
                                Background="#F8F9FA"
                                CornerRadius="10"
                                Padding="15">
                            <StackPanel>
                                <TextBlock Text="📝 Заметки к тренировке"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="#2C3E50"
                                           Margin="0,0,0,10"/>

                                <TextBox Text="Отличная тренировка! Увеличил вес в жиме."
                                         FontSize="14"
                                         Padding="10"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Height="60"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="#F8F9FA" 
                Padding="20"
                BorderBrush="#ECF0F1"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Предыдущее упражнение -->
                <Button Grid.Column="0"
                        Content="← Предыдущее упражнение"
                        Background="Transparent"
                        Foreground="#3498DB"
                        FontSize="14"
                        Padding="15"
                        BorderThickness="0"
                        HorizontalAlignment="Left"/>

                <!-- Прогресс -->
                <StackPanel Grid.Column="1" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Прогресс тренировки"
                               FontSize="14"
                               Foreground="#7F8C8D"/>
                    <ProgressBar Value="50"
                                 Maximum="100"
                                 Width="300"
                                 Height="10"
                                 Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Следующее упражнение -->
                <Button Grid.Column="2"
                        Content="Следующее упражнение →"
                        Background="#3498DB"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="15"
                        BorderThickness="0"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>