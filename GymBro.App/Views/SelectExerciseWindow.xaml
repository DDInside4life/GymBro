<Window x:Class="GymBro.App.Views.SelectExerciseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор упражнения" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Выберите упражнение для добавления в программу" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>
        <ListBox Grid.Row="1" ItemsSource="{Binding Exercises}" SelectedItem="{Binding SelectedExercise}" 
                 DisplayMemberPath="Name" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Добавить" Command="{Binding AddCommand}" Padding="15,8" Margin="5"/>
            <Button Content="Отмена" Command="{Binding CancelCommand}" Padding="15,8" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>