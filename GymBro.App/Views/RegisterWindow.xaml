<Window x:Class="GymBro.App.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GymBro.App.Infrastructure"
        Title="Регистрация" Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Регистрация в GYM" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Логин*"/>
            <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Email*"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Полное имя"/>
            <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Пароль*"/>
            <PasswordBox local:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="Подтверждение пароля*"/>
            <PasswordBox local:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Margin="0,10,0,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Зарегистрироваться" Command="{Binding RegisterCommand}" Background="#3498DB" Foreground="White" FontWeight="Bold"/>
                <Button Content="Отмена" Command="{Binding CancelCommand}" Background="#95A5A6" Foreground="White"/>
            </StackPanel>

            <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
                <Run Text="Уже есть аккаунт?"/>
                <Hyperlink Command="{Binding LoginCommand}">
                    <Run Text="Войти"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>