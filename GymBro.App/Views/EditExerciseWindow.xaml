<Window x:Class="GymBro.App.Views.EditExerciseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Упражнение" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#F5F7FA">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Название*" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10" Padding="3"/>

            <TextBlock Text="Описание" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" Padding="3" Height="60" TextWrapping="Wrap"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Подходы*" Margin="0,0,0,5"/>
                    <TextBox x:Name="SetsTextBox" Margin="0,0,0,10" Padding="3"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Повторения (мин-макс)*" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="RepsMinTextBox" Margin="0,0,5,10" Padding="3"/>
                        <TextBlock Grid.Column="1" Text="-" VerticalAlignment="Center" Margin="0,0,5,10"/>
                        <TextBox Grid.Column="2" x:Name="RepsMaxTextBox" Margin="0,0,0,10" Padding="3"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <TextBlock Text="Отдых между подходами (сек)*" Margin="0,0,0,5"/>
            <TextBox x:Name="RestSecondsTextBox" Margin="0,0,0,10" Padding="3"/>

            <TextBlock Text="Советы по технике" Margin="0,0,0,5"/>
            <TextBox x:Name="TechniqueTipsTextBox" Margin="0,0,0,10" Padding="3" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="Частые ошибки" Margin="0,0,0,5"/>
            <TextBox x:Name="CommonMistakesTextBox" Margin="0,0,0,10" Padding="3" Height="60" TextWrapping="Wrap"/>

            <TextBlock Text="Оборудование" Margin="0,0,0,5"/>
            <ListBox x:Name="EquipmentListBox" ItemsSource="{Binding Equipment}" 
                     SelectionMode="Multiple" Margin="0,0,0,10" Height="100">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="OK" Click="OkButton_Click" Width="100" Margin="5" IsDefault="True"/>
                <Button Content="Отмена" Click="CancelButton_Click" Width="100" Margin="5" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>