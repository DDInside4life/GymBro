<Window  x:Class="GymBro.App.Views.UserProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мой профиль" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="#3498DB" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="← Назад"
                        Foreground="White"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"/>

                <TextBlock Grid.Column="1"
                           Text="Мой профиль"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="Сохранить"
                        Background="White"
                        Foreground="#3498DB"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="20,10"
                        BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">

                <!-- Основная информация -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="👤 Основная информация"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Имя -->
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Имя"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="Роман"
                                         FontSize="16"
                                         Padding="10"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         />
                            </StackPanel>

                            <!-- Фамилия -->
                            <StackPanel Grid.Row="0" Grid.Column="2">
                                <TextBlock Text="Фамилия"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="Кулеш"
                                         FontSize="16"
                                         Padding="10"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         />
                            </StackPanel>

                            <!-- Email -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0">
                                <TextBlock Text="Email"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="example@example.com"
                                         FontSize="16"
                                         Padding="10"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         />
                            </StackPanel>

                            <!-- Дата рождения -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,20,0,0">
                                <TextBlock Text="Дата рождения"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <DatePicker SelectedDate="1999-07-23"
                                            FontSize="16"
                                            Padding="10"/>
                            </StackPanel>

                            <!-- Пол -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,20,0,0">
                                <TextBlock Text="Пол"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <ComboBox SelectedIndex="0"
                                          FontSize="16"
                                          Padding="10">
                                    <ComboBoxItem Content="Мужской"/>
                                    <ComboBoxItem Content="Женский"/>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Физические параметры -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="📏 Физические параметры"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Вес -->
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Вес (кг)"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="75"
                                         FontSize="16"
                                         Padding="10"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1"
                                         />
                            </StackPanel>

                            <!-- Рост -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Рост (см)"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <TextBox Text="170"
                                         FontSize="16"
                                         Padding="10"
                                         BorderBrush="#BDC3C7"
                                         BorderThickness="1" />
                            </StackPanel>

                            <!-- ИМТ -->
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="ИМТ"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,5"/>
                                <Border Background="#ECF0F1"
                                        CornerRadius="5"
                                        Padding="10">
                                    <TextBlock Text="25.7 (Нормальный)"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#2ECC71"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Цели и уровень -->
                <Border Background="White"
                        CornerRadius="15"
                        Padding="25"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="🎯 Цели и уровень подготовки"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Основная цель -->
                            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock Text="Основная цель"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <RadioButton Content="Похудение" 
                                                 GroupName="Goal"
                                                 Margin="0,0,15,0"/>
                                    <RadioButton Content="Набор массы" 
                                                 GroupName="Goal"
                                                 Margin="0,0,15,0" IsChecked="True"/>
                                    <RadioButton Content="Поддержание" 
                                                 GroupName="Goal"/>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Уровень подготовки -->
                            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                                <TextBlock Text="Уровень подготовки"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <RadioButton Content="Начинающий" 
                                                 GroupName="Level"
                                                 Margin="0,0,15,0"/>
                                    <RadioButton Content="Средний" 
                                                 GroupName="Level"
                                                 Margin="0,0,15,0"/>
                                    <RadioButton Content="Продвинутый" 
                                                 GroupName="Level"
                                                 IsChecked="True"/>
                                </WrapPanel>
                            </StackPanel>

                            <!-- Предпочтения -->
                            <StackPanel Grid.Row="2">
                                <TextBlock Text="Предпочтения"
                                           FontSize="14"
                                           Foreground="#7F8C8D"
                                           Margin="0,0,0,10"/>
                                <WrapPanel>
                                    <CheckBox Content="Силовые тренировки" 
                                              Margin="0,0,15,0" IsChecked="True"/>
                                    <CheckBox Content="Кардио" 
                                              Margin="0,0,15,0"/>
                                    <CheckBox Content="Йога/Растяжка" 
                                              Margin="0,0,15,0"/>
                                    <CheckBox Content="Домашние тренировки" 
                                              IsChecked="True"/>
                                </WrapPanel>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="#F8F9FA" 
                Padding="20"
                BorderBrush="#ECF0F1"
                BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Отмена"
                        Background="Transparent"
                        Foreground="#7F8C8D"
                        FontSize="14"
                        Padding="20,10"
                        BorderThickness="1"
                        BorderBrush="#BDC3C7"
                        Margin="0,0,10,0"/>

                <Button Content="Сохранить изменения"
                        Background="#3498DB"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Padding="30,10"
                        BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>