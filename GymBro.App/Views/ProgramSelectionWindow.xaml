<Window x:Class="GymBro.App.ProgramSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор программы тренировок" 
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и фильтры -->
        <Border Grid.Row="0" Background="White" Padding="30">
            <StackPanel>
                <TextBlock Text="🏋️ Выберите программу тренировок"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#2C3E50"/>

                <TextBlock Text="Подберите программу, соответствующую вашим целям и уровню подготовки"
                           FontSize="16"
                           Foreground="#7F8C8D"
                           Margin="0,10,0,30"/>

                <!-- Фильтры -->
                <WrapPanel>
                    <ComboBox Width="200"
                              SelectedIndex="0"
                              Margin="0,0,15,0"
                              Padding="10">
                        <ComboBoxItem Content="Все цели"/>
                        <ComboBoxItem Content="Похудение"/>
                        <ComboBoxItem Content="Набор массы"/>
                        <ComboBoxItem Content="Выносливость"/>
                    </ComboBox>

                    <ComboBox Width="200"
                              SelectedIndex="0"
                              Margin="0,0,15,0"
                              Padding="10">
                        <ComboBoxItem Content="Все уровни"/>
                        <ComboBoxItem Content="Начинающий"/>
                        <ComboBoxItem Content="Средний"/>
                        <ComboBoxItem Content="Продвинутый"/>
                    </ComboBox>

                    <ComboBox Width="200"
                              SelectedIndex="0"
                              Margin="0,0,15,0"
                              Padding="10">
                        <ComboBoxItem Content="Все типы"/>
                        <ComboBoxItem Content="Силовые"/>
                        <ComboBoxItem Content="Кардио"/>
                        <ComboBoxItem Content="Фулбоди"/>
                    </ComboBox>

                    <Button Content="Сбросить фильтры"
                            Background="Transparent"
                            Foreground="#3498DB"
                            BorderThickness="1"
                            BorderBrush="#3498DB"
                            Padding="15,8" />
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- Список программ -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="30">

                <!-- Программа 1 -->
                <Border Width="350" 
                        Height="400"
                        Background="White"
                        CornerRadius="15"
                        Margin="0,0,30,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <Border Grid.Row="0" 
                                Background="#E8F4FD"
                                CornerRadius="15,15,0,0"
                                Padding="25">
                            <StackPanel>
                                <TextBlock Text="💪 Набор массы"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#3498DB"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Силовая программа для начинающих"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                            </StackPanel>
                        </Border>

                        <!-- Описание -->
                        <StackPanel Grid.Row="1" Margin="25">
                            <TextBlock Text="Идеальна для тех, кто только начинает свой путь в силовом тренинге. Программа фокусируется на базовых упражнениях."
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="📅 12 недель"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="🏋️ 4 тренировки в неделю"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="⏱ 60-75 минут за тренировку"
                                           FontSize="14"/>
                            </StackPanel>

                            <Border Background="#F8F9FA"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,0,0,20">
                                <TextBlock Text="🔥 Рекомендуется для вас"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="#E74C3C"/>
                            </Border>
                        </StackPanel>

                        <!-- Кнопки -->
                        <Border Grid.Row="2" 
                                Background="#F8F9FA"
                                CornerRadius="0,0,15,15"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="Подробнее"
                                        Background="Transparent"
                                        Foreground="#3498DB"
                                        BorderThickness="1"
                                        BorderBrush="#3498DB"
                                        Padding="15"/>

                                <Button Grid.Column="1"
                                        Content="Выбрать"
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        Padding="15"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Программа 2 -->
                <Border Width="350" 
                        Height="400"
                        Background="White"
                        CornerRadius="15"
                        Margin="0,0,30,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <Border Grid.Row="0" 
                                Background="#F0F7E9"
                                CornerRadius="15,15,0,0"
                                Padding="25">
                            <StackPanel>
                                <TextBlock Text="🏃‍♂️ Похудение"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2ECC71"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Кардио и силовые тренировки"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                            </StackPanel>
                        </Border>

                        <!-- Описание -->
                        <StackPanel Grid.Row="1" Margin="25">
                            <TextBlock Text="Комбинированная программа для эффективного жиросжигания. Сочетает кардио и силовые тренировки."
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="📅 8 недель"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="🏋️ 5 тренировок в неделю"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="⏱ 45-60 минут за тренировку"
                                           FontSize="14"/>
                            </StackPanel>

                            <Border Background="#F8F9FA"
                                    CornerRadius="8"
                                    Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="🏆"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="Самая популярная"
                                               FontSize="14"
                                               Foreground="#7F8C8D"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Кнопки -->
                        <Border Grid.Row="2" 
                                Background="#F8F9FA"
                                CornerRadius="0,0,15,15"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="Подробнее"
                                        Background="Transparent"
                                        Foreground="#3498DB"
                                        BorderThickness="1"
                                        BorderBrush="#3498DB"
                                        Padding="15"/>

                                <Button Grid.Column="1"
                                        Content="Выбрать"
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        Padding="15"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- Программа 3 -->
                <Border Width="350" 
                        Height="400"
                        Background="White"
                        CornerRadius="15"
                        Margin="0,0,0,30">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок -->
                        <Border Grid.Row="0" 
                                Background="#FFF4E6"
                                CornerRadius="15,15,0,0"
                                Padding="25">
                            <StackPanel>
                                <TextBlock Text="⚡ Выносливость"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#E67E22"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="Тренировки на выносливость"
                                           FontSize="20"
                                           FontWeight="Bold"
                                           Foreground="#2C3E50"/>
                            </StackPanel>
                        </Border>

                        <!-- Описание -->
                        <StackPanel Grid.Row="1" Margin="25">
                            <TextBlock Text="Программа для развития выносливости и улучшения работы сердечно-сосудистой системы."
                                       FontSize="14"
                                       Foreground="#7F8C8D"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="📅 6 недель"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="🏋️ 3-4 тренировки в неделю"
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="⏱ 30-45 минут за тренировку"
                                           FontSize="14"/>
                            </StackPanel>

                            <Border Background="#F8F9FA"
                                    CornerRadius="8"
                                    Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⭐"
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="Для начинающих"
                                               FontSize="14"
                                               Foreground="#7F8C8D"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Кнопки -->
                        <Border Grid.Row="2" 
                                Background="#F8F9FA"
                                CornerRadius="0,0,15,15"
                                Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"
                                        Content="Подробнее"
                                        Background="Transparent"
                                        Foreground="#3498DB"
                                        BorderThickness="1"
                                        BorderBrush="#3498DB"
                                        Padding="15"/>

                                <Button Grid.Column="1"
                                        Content="Выбрать"
                                        Background="#3498DB"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        Padding="15"
                                        Margin="10,0,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>