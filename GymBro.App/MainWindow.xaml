<Window x:Class="GymBro.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymBro.App"
        xmlns:viewModels="clr-namespace:GymBro.App.ViewModels"
        mc:Ignorable="d"
        Title="GYM - Gain Your Muscle" 
        Height="980" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>

    <!-- Ресурсы стилей -->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/MainStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковая панель навигации -->
        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок приложения -->
                <StackPanel Grid.Row="0" Margin="20,20,20,30">
                    <TextBlock Text="🏋️‍♂️" FontSize="32" HorizontalAlignment="Center"/>
                    <TextBlock Text="GYM" Foreground="White" FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    <TextBlock Text="Gain Your Muscles" Foreground="#BDC3C7" FontSize="12" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Карточка профиля пользователя -->
                <Border Grid.Row="1" Background="#34495E" CornerRadius="10" Margin="15,0,15,20" Padding="15">
                    <StackPanel>
                        <Ellipse Width="60" Height="60" HorizontalAlignment="Center">
                            <!-- Здесь можно добавить изображение, но пока пусть будет заглушка -->
                        </Ellipse>
                        <TextBlock Text="Кулеш Роман" Foreground="White" FontSize="16" 
                                   FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        <TextBlock Text="Продвинутый уровень" Foreground="#3498DB" FontSize="12" 
                                   HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        <Button Content="Мой профиль" Style="{StaticResource NavigationButtonStyle}" 
                                Margin="0,15,0,0" Command="{Binding NavigateCommand}" CommandParameter="Profile"/>
                    </StackPanel>
                </Border>

                <!-- Основное меню навигации -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <Button Content="🏠 Главная" Style="{StaticResource NavigationButtonStyle}" 
                            Tag="Home" Command="{Binding NavigateCommand}" CommandParameter="Home"/>
                    <Button Content="📋 Тренировка" Style="{StaticResource NavigationButtonStyle}" 
                            Tag="Workout" Command="{Binding NavigateCommand}" CommandParameter="Workout"/>
                    <Button Content="📊 Программы" Style="{StaticResource NavigationButtonStyle}" 
                            Tag="Programs" Command="{Binding NavigateCommand}" CommandParameter="Programs"/>
                    <Button Content="💪 Упражнения" Style="{StaticResource NavigationButtonStyle}" 
                            Tag="Exercises" Command="{Binding NavigateCommand}" CommandParameter="Exercises"/>
                    <Button Content="📈 Прогресс" Style="{StaticResource NavigationButtonStyle}" 
                            Tag="Progress" Command="{Binding NavigateCommand}" CommandParameter="Progress"/>
                    <Button Content="⚙ Настройки" Style="{StaticResource NavigationButtonStyle}" 
                            Tag="Settings" Command="{Binding NavigateCommand}" CommandParameter="Settings"/>
                </StackPanel>

                <!-- Статистика -->
                <Border Grid.Row="3" Background="#34495E" CornerRadius="10" Margin="15,0,15,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Недельная статистика" Foreground="#BDC3C7" FontSize="12" Margin="0,0,0,10"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="3" Foreground="#2ECC71" FontSize="24" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Тренировок" Foreground="#BDC3C7" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="85%" Foreground="#3498DB" FontSize="24" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Выполнено" Foreground="#BDC3C7" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Нижняя часть с информацией -->
                <StackPanel Grid.Row="4" Margin="20,0,20,20">
                    <TextBlock Text="© 2026 GYM v1.0" Foreground="#7F8C8D" FontSize="10" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основная область контента -->
        <Grid Grid.Column="1" Background="#F5F7FA">
            <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>